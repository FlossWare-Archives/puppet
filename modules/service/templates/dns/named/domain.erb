$ORIGIN .
$TTL <%= ttl %>
<% domainZone -%>		IN SOA	<%= server -%>. root.<%= domain -%>. (
				2000092153 ; serial
				10800      ; refresh (3 hours)
				900        ; retry (15 minutes)
				604800     ; expire (1 week)
				86400      ; minimum (1 day)
				)
			    NS	<%= server %>.

$ORIGIN <%= domain -%>.

<% hostsMap.each do |host| -%>
<%= host [ "name" ] %> A <%= networkNumber -%>.<%= host [ "number" ] %>
    <% if host [ "cname" ] then %>
        <% host [ "cname" ].each do |cname| %>
<%= cname %> CNAME <%= host [ "name" ] %>
        <% end %>
    <% end %>
<% end -%>

