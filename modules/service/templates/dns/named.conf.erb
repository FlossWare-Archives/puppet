options {
    directory "/etc/named";

    <% if serverMap [ "listenOn" ] then -%>
    listen-on { <%= serverMap [ "listenOn" ] -%>; };
    <% end -%>

    <% if serverMap [ "forwarders" ] then -%>
    forwarders { <%= serverMap [ "forwarders" ] -%>; };
    <% end -%>
};

<%if serverMap [ "zones" ] then -%>
<% serverMap [ "zones" ].each do |zone| -%>
zone "<%= zone -%>" IN {
    type <%= zoneType -%>;
    file "<%= zone -%>";
    <% if notifyChange then %>
    notify <%= notifyChange -%>;
    <% end %>
    <% if allowUpdate then %>
    allow-update { <%= allowUpdate -%> };
    <% end %>
};
<% end %>
<% end %>
