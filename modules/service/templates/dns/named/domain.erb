$ORIGIN .
$TTL <%= ttl %>
<% domain -%>		IN SOA	<%= server -%>. root.<%= domain -%>. (
				2000092153 ; serial
				10800      ; refresh (3 hours)
				900        ; retry (15 minutes)
				604800     ; expire (1 week)
				86400      ; minimum (1 day)
				)
			    NS	<%= server %>.
<%if parentServer != "" then -%>
                A	<%= parentServer %>
<% end -%>

$ORIGIN <%= domain -%>.

<% hostsMap.each |host| -%>
    <%= host [ "name" ] %> A <%= networkNumber -%>.<%= host [ "number" ] -%>

        <% if host [ "cname" ] -%>
            <% host [ "cname" ].each |cname| -%>
                <%= cname %> CNAME <%= host [ "name" ] %>
            <% end -%>
        <% end -%>
    <% end -%>
<% end -%>

