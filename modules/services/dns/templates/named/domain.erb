$ORIGIN .
$TTL <%= dns_ttl %>
flossware.com		IN SOA	<%= variables::adminserver_host %>. root.<%= variables::flossware_domain %>. (
				2000092153 ; serial
				10800      ; refresh (3 hours)
				900        ; retry (15 minutes)
				604800     ; expire (1 week)
				86400      ; minimum (1 day)
				)
			    NS	<%= variables::adminserver_host %>.
			    A	192.168.168.1

$ORIGIN <%= dns_domain %>.

<% dns_hosts.each |host| -%>
    <%= host [ "name" ] %> A <%= dns_baseIp %>.<%= host [ "subIp" ] %>

    <% if host [ "cname" ] %>
        <% host [ "cname" ].each |cname| -%>
            <%= cname %> CNAME <%= host [ "name" ] %>
        <% end -%>
    <% end %>
<% end -%>
