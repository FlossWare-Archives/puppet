options {
	directory "/etc/named";

    <% if listenOn then -%>
    listen-on { <%= listenOn -%>; };
    <% end -%>

    <% if forwarders then -%>
	forwarders { <%= forwarders -%>; };
    <% end -%>
};

<% zones.each do |zone| -%>
zone "<%= zone -%>" IN {
	type master;
	file "<%= zone -%>";
    <% if notifyChange then -%>
    notify <%= notifyChange -%>;
    <% end %>
    <% if allowUpdate then -%>
    allow-update { <%= allowUpdate -%> };
    <% end %>
};
<% end -%>
