server-identifier       adminserver;
ddns-domainname         "flossware.com.";
ddns-rev-domainname     "in-addr.arpa.";
ddns-update-style       interim;
ddns-updates            on;
update-static-leases    on;
do-forward-updates      on;
one-lease-per-client    on;
max-lease-time          21600;
default-lease-time      21600;

allow                   client-updates;
allow                   unknown-clients;
allow                   duplicates;

authoritative;


subnet 192.168.168.0 netmask 255.255.255.0 {
    range <%= sysadmin::dhcp::variables::min_ip %> <%= sysadmin::dhcp::variables::max_ip =>
    option subnet-mask 255.255.255.0;
    option broadcast-address 192.168.168.255;
    option routers 192.168.168.1;
    option domain-name-servers 192.168.168.253;
    option domain-name "flossware.com";
}

zone flossware.com. {
    primary <%= sysadmin::dhcp::variables::dhcp_server %>;
}

zone 168.168.192.in-addr.arpa. {
    primary <%= sysadmin::dhcp::variables::dhcp_server %>;
}

zone 122.168.192.in-addr.arpa. {
    primary <%= sysadmin::dhcp::variables::dhcp_server %>;
}

