<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://mediatomb.cc/config/1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://mediatomb.cc/config/1 http://mediatomb.cc/config/1.xsd" version="1">
  <server>
    <protocolInfo extend="yes"/>
    <interface>en0</interface>
    <ui enabled="yes">
      <accounts enabled="no" session-timeout="30"/>
    </ui>
    <name>Shared Media</name>
    <udn>uuid:802894b1-6a74-4a13-868a-1ce188f68802</udn>
    <home>/Users/mark/.mediatomb</home>
    <webroot>/sw/share/mediatomb/web</webroot>
    <storage>
      <sqlite3 enabled="yes">
        <database-file>mediatomb.db</database-file>
      </sqlite3>
    </storage>
  </server>
  <import hidden-files="no">
    <scripting script-charset="UTF-8">
      <common-script>/sw/share/mediatomb/js/common.js</common-script>
      <playlist-script>/sw/share/mediatomb/js/playlists.js</playlist-script>
      <virtual-layout type="builtin">
        <import-script>/sw/share/mediatomb/js/import.js</import-script>
      </virtual-layout>
    </scripting>
    <mappings>
      <extension-mimetype ignore-unknown="no">
        <map from="mpg" to="video/mpeg"/>
        <map from="mov" to="video/mov"/>
<!--
        <map from="avi" to="video/avi"/>
-->
        <map from="avi" to="video/x-divx"/>
        <map from="mp4" to="video/mp4"/>
        <map from="m4v" to="video/mp4"/>
        <map from="m2v" to="video/mpeg"/>
        <map from="gif" to="image/gif"/>
        <map from="jpg" to="image/jpg"/>
        <map from="png" to="image/png"/>
        <map from="mp3" to="audio/mpeg"/>
        <map from="ogg" to="application/ogg"/>
        <map from="asf" to="video/x-ms-asf"/>
        <map from="asx" to="video/x-ms-asf"/>
        <map from="wma" to="audio/x-ms-wma"/>
        <map from="wax" to="audio/x-ms-wax"/>
        <map from="wmv" to="video/x-ms-wmv"/>
        <map from="wvx" to="video/x-ms-wvx"/>
        <map from="wm" to="video/x-ms-wm"/>
        <map from="wmx" to="video/x-ms-wmx"/>
        <map from="m3u" to="audio/x-mpegurl"/>
        <map from="pls" to="audio/x-scpls"/>
      </extension-mimetype>
      <mimetype-upnpclass>
        <map from="audio/*" to="object.item.audioItem.musicTrack"/>
        <map from="application/ogg" to="object.item.audioItem.musicTrack"/>
        <map from="video/*" to="object.item.videoItem"/>
        <map from="image/*" to="object.item.imageItem"/>
      </mimetype-upnpclass>
      <mimetype-contenttype>
        <treat mimetype="audio/mpeg" as="mp3"/>
        <treat mimetype="application/ogg" as="ogg"/>
        <treat mimetype="audio/x-flac" as="flac"/>
        <treat mimetype="image/jpeg" as="jpg"/>
        <treat mimetype="audio/x-mpegurl" as="playlist"/>
        <treat mimetype="audio/x-scpls" as="playlist"/>
        <treat mimetype="video/x-msvideo" as="avi"/>
      </mimetype-contenttype>
    </mappings>
    <autoscan>
      <directory location="/Volumes/Media/Shared/Video/2 Stupid Dogs" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Doctor Who" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Sponge Bob" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Dexters Lab" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Misc" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Firefly" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/My Name Is Earl" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/The Office" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Jericho" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Lost" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/TNG" mode="timed" interval="360000" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Xena" mode="timed" interval="360000" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Heroes" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Eureka" mode="timed" interval="36000" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Battlestar Galactica" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Coupling" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Terminator" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/John Adams" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Spaced" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
      <directory location="/Volumes/Media/Shared/Video/Clone Wars" mode="timed" interval="3600" level="full" recursive="yes" nidden-files="no"/>
    </autoscan>
  </import>
  <transcoding enabled="no">
    <mimetype-profile-mappings>
      <transcode mimetype="video/x-flv" using="vlcmpeg"/>
      <transcode mimetype="application/ogg" using="vlcmpeg"/>
      <transcode mimetype="application/ogg" using="oggflac2raw"/>
      <transcode mimetype="audio/x-flac" using="oggflac2raw"/>
    </mimetype-profile-mappings>
    <profiles>
      <profile name="oggflac2raw" enabled="no" type="external">
        <mimetype>audio/L16</mimetype>
        <accept-url>no</accept-url>
        <first-resource>yes</first-resource>
        <accept-ogg-theora>no</accept-ogg-theora>
        <agent command="ogg123" arguments="-d raw -f %out %in"/>
        <buffer size="1048576" chunk-size="131072" fill-size="262144"/>
      </profile>
      <profile name="vlcmpeg" enabled="no" type="external">
        <mimetype>video/mpeg</mimetype>
        <accept-url>yes</accept-url>
        <first-resource>yes</first-resource>
        <accept-ogg-theora>yes</accept-ogg-theora>
        <agent command="vlc" arguments="-I dummy %in --sout #transcode{venc=ffmpeg,vcodec=mp2v,vb=4096,fps=25,aenc=ffmpeg,acodec=mpga,ab=192,samplerate=44100,channels=2}:standard{access=file,mux=ps,dst=%out} vlc:quit"/>
        <buffer size="14400000" chunk-size="512000" fill-size="120000"/>
      </profile>
    </profiles>
  </transcoding>
</config>
