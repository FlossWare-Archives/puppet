server-identifier       <%= dhcp_identifier %>;
ddns-domainname         "<%= dhcp_domainName %>.";
ddns-rev-domainname     "in-addr.arpa.";
ddns-update-style       interim;
ddns-updates            on;
update-static-leases    on;
do-forward-updates      on;
one-lease-per-client    on;
max-lease-time          <%= dhcp_maxLeaseTime %>;
default-lease-time      <%= dhcp_defaultLeaseTime %>;

allow                   client-updates;
allow                   unknown-clients;
allow                   duplicates;

authoritative;


subnet <%= dhcp_subnet %> netmask <%= dhcp_netmask %> {
    range <%= dhcp_minIp %> <%= dhcp_maxIp %>
    option subnet-mask <%= dhcp_subnetMask %>;
    option broadcast-address <%= dhcp_broadcastAddress %>;
    option routers <%= dhcp_routers %>;
    option domain-name-servers <%= dhcp_dnsServers %>;
    option domain-name "<%= dns_domainName %>";
}

<% dhcp_zones.each |zone| -%>
zone <%= zone %>. {
    primary <%= dhcp_dnsServers %>;
}
<% end -%>

